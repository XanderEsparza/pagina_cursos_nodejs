<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/registro.css">
    <script src="registro.js"></script>
    <title>Modificar usuario</title>
</head>

<body>
    <%- include('../layout/navValidation.ejs');%>
    <form action="/users/update/<%= user.id %>" method="post">
    <div class="container">
        <div class="card">
            <center>
                <a class="login">Editar informacion</a>
            </center>
                <div class="inputBox">
                    <input type="text" name="nombre" required="required" value="<%= user.nombre %>">
                    <span class="nombre" id="nombre">Nombre</span>
                </div>
                <% if (errors) { %>
                    <% errors.forEach(error => { %>
                        <% if (error.path === 'nombre') { %>
                            <div  class="error-message"><%= error.msg %></div>
                        <% } %>
                    <% }); %>
                <% } %>
                <div class="inputBox">
                    <input type="text" required="required" name="apellidos" value="<%= user.apellidos %>">
                    <span class="apellidosRegistro" id="apellidosRegistro">Apellidos</span>
                </div>
                <% if (errors) { %>
                    <% errors.forEach(error => { %>
                        <% if (error.path === 'apellidos') { %>
                            <div class="error-message"><%= error.msg %></div>
                        <% } %>
                    <% }); %>
                <% } %>
                <div class="inputBox">
                    <input type="text" required="required" name="usuario" value="<%= user.usuario %>">
                    <span class="user" id="usuarioRegistro">Usuario</span>
                </div>
                <% if (errors) { %>
                    <% errors.forEach(error => { %>
                        <% if (error.path === 'usuario') { %>
                            <div class="error-message"><%= error.msg %></div>
                        <% } %>
                    <% }); %>
                <% } %>
                <div class="inputBox">
                    <input type="email" required="required" name="email" value="<%= user.email %>">
                    <span class="emailRegistro" id="emailRegistro">Email</span>
                </div>
                <% if (errors) { %>
                    <% errors.forEach(error => { %>
                        <% if (error.path === 'email') { %>
                            <div class="error-message"><%= error.msg %></div>
                        <% } %>
                    <% }); %>
                <% } %>
                <!-- <div class="inputBox">
                    <input type="password" id="passwordField" required="required" autocomplete="new-password" name="password" value="<%= user.password %>">
                    <span id="contraseñaRegistro">Contraseña</span>
                </div> -->
                <div class="inputBox">
                    <input type="number" required="required" name="edad" value="<%= user.edad %>">
                    <span class="user nacimiento" id="nacimientoRegistro">Edad</span>
                </div>
                <% if (errors) { %>
                    <% errors.forEach(error => { %>
                        <% if (error.path === 'edad') { %>
                            <div class="error-message"><%= error.msg %></div>
                        <% } %>
                    <% }); %>
                <% } %>
                <div>
                    <a href="/courses/show" class="back">Regresar</a>
                    <button class="enter" type="submit">Actualizar</button>
                </div>
            

        </div>
    </div>
</form>
    <div class="triangulo-grande"></div>
    <div class="triangulo-pequeno"></div>

</body>

</html>